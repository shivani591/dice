import java.util.Random;

public class DiceGame {
    public static void main(String[] args) {
        Random rand = new Random();
        int lastRoll = -1;     // store last rolled number
        int repeatCount = 1;   // count how many times the same number appears

        System.out.println("ðŸŽ² Dice Game Has Started! Rolling...");

        while (true) {
            int roll = rand.nextInt(6) + 1;  // generate number 1â€“6
            System.out.println("You rolled: " + roll);

            // check if number is same as last roll
            if (roll == lastRoll) {
                repeatCount++;
            } else {
                repeatCount = 1; // reset count if different number
            }

            // stop if number appears 3 times in a row
            if (repeatCount == 3) {
                System.out.println("!!! The number " + roll + " appeared 3 times! Game over.");
                break;
            }

            lastRoll = roll; // update last roll
        }
    }
}
